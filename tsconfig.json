{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],

    // ðŸ‘‰ add these two:
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@/provider/*": ["provider/*"],
      "@/component/*": ["app/component/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/leads/page.tsx",
    "app/firebase-config.js"
  ],
  "exclude": ["node_modules"]
}
